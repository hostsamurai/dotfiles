[user]
  name = USERNAME
  email = EMAIL

[alias]
  co = checkout
  ci = commit
  st = status --column=
  br = branch
  df = diff -b
  lo = log --oneline --decorate=full
  hist = log --pretty=format:'%h %d | %s%d [%an]' --graph --date=short
  sl = shortlog --format='%C(auto)%h %s'
  ac = apply --check --ignore-whitespace --verbose
  type = cat-file -t
  dump = cat-file -p
  stls = stash list
  stp = stash pop
  sts = stash save --include-untracked
  stsh = "!f() { git stash show stash@{$1}; }; f"
  sta = "!f() { git stash apply stash@{$1}; }; f"
  std = "!f() { git stash drop stash@{$1}; }; f"

[color]
  ui = true

[core]
  autocrlf = input
  editor = vim
  excludesfile = ~/.gitignore_global

[mergetool "mvimdiff"]
  cmd = /usr/local/bin/mvimdiff -f "$LOCAL" "$MERGED" "$REMOTE"

[merge]
  tool = mvimdiff
  conflictstyle = diff3

[diff]
  tool = vimdiff
  guitool = gvimdiff

[difftool "sourcetree"]
  cmd = opendiff "$LOCAL" "$REMOTE"
  path =

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh "$LOCAL" "$REMOTE" -ancestor "$BASE" -merge "$MERGED"
  trustExitCode = true
